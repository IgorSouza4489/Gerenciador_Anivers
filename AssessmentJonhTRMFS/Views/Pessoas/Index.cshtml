@model IEnumerable<AssessmentJonhTRMFS.Models.Pessoa>

@{
    ViewBag.Title = "Index";
}

<h2>Registros</h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>

<form asp-controller="Movies" asp-action="Index">
    <p>
        <input type="text" name="searchString" />
        <input type="submit" value="Filtrar" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            Sobrenome
        </th>
        <th>
            @Html.ActionLink("Nascimento", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.NomeId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.NomeId }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.NomeId })
            </td>
        </tr>


    }


</table>

<div style="text-align:center; margin-top: 50px; "><h4>Pessoas que fazem aniversário hoje</h4></div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            Sobrenome
        </th>
        <th>
            @Html.ActionLink("Nascimento", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
    </tr>

    @foreach (var item in Model)
    {


        //if (item.Nascimento == Convert.ToDateTime(DateTime.Today.ToString("dd/MM")))
        if (item.Nascimento.ToShortDateString().Contains(DateTime.Now.ToString("dd/MM")))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.NomeId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.NomeId }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.NomeId })
                </td>
            </tr>
        }

    }

    <!--

        Entity Framework(BD) - Identity(Autenticação) - WebApi

    -->

</table>







